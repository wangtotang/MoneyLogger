<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">

    </style>

    <style name="TextView.Tips">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">11dp</item>
        <item name="android:textColor">@color/base_color_text_black</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/base_size_margin_right</item>
    </style>

    <style name="SpinnerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@mipmap/icon_spinner_black</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/base_color_transparent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLength">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColorHint">@color/base_color_text_hint</item>
        <item name="android:textColor">@color/base_color_text_black</item>
    </style>


    <style name="Fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/base_color_background</item>
    </style>

    <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/icon_checkbox_selector</item>
    </style>

</resources>
