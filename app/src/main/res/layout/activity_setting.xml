<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_color_background">

    <include
        layout="@layout/include_common_action_bar"/>

    <RelativeLayout
        style="@style/Item">

        <TextView
            style="@style/TextView.SubTitle"
            android:layout_centerVertical="true"
            android:text="@string/set_budget_tip_flag" />

        <RelativeLayout
            android:id="@+id/rl_setting_budget_tip"
            style="@style/Spinner">

            <ImageView
                android:id="@+id/iv_open_budget_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/btn_on"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_close_budget_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/btn_off"
                android:visibility="invisible" />

        </RelativeLayout>

    </RelativeLayout>

    <View style="@style/Line"/>


</LinearLayout>
