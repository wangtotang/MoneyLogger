<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <ImageButton
        android:id="@+id/ib_pie_indicator_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/icon_indicator_left"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base_size_text_tab"
        android:text="@string/set_trend_indicator_time"/>

    <ImageButton
        android:id="@+id/ib_pie_indicator_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/icon_indicator_right"
        android:layout_gravity="center_vertical"/>

</LinearLayout>
